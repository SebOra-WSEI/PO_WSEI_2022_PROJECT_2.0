<Window x:Class="BOOKSTORE_PROJECT_PO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BOOKSTORE_PROJECT_PO"
        mc:Ignorable="d"
        Title="Customers" Height="500" Width="900">
    <Grid>
        <Grid>
            <Button Content="Load Customers" Click="BtnLoadCustomers" HorizontalAlignment="Left" Margin="5,10,0,0" Width="120" VerticalAlignment="Top" FontSize="16" FontFamily="Microsoft Himalaya"/>
            <Button x:Name="btnAddCustomer" Click="BtnNewCustomerWindow" Content="Add a Customer" HorizontalAlignment="Left" Width="120" Margin="150,10,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Microsoft Himalaya"/>
            <DataGrid x:Name="gridCustomer1" d:ItemsSource="{d:SampleData ItemCount=10}" ColumnWidth="*" Margin="0,40,0,0" Height="218" VerticalAlignment="Top"/>
        </Grid>
      
    </Grid>
</Window>
